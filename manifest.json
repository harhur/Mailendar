{
  "manifest_version": 2,

  "name": "Mailendar",
  "description": "Automatically adds events to calendar based on content of incoming e-mail.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title":   "Click to update"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  
  "permissions": [
    "activeTab",
    "storage",
    "*://*.google.com/*/"
  ]
}